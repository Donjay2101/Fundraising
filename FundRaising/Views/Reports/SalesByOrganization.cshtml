            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="col-md-3">
                Sart Date
            </div>
            <div class="col-md-9">
                <input type="text" disabled  name="txtstartDate" id="txtstartDate" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-3">
                End Date
            </div>
            <div class="col-md-9">
                <input type="text" disabled name="txtendDate"  id="txtendDate" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="button" id="btnsubmit" value="GenerateReport" />
        </div>
    </div>
</form>
