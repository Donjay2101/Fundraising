                    </div>
                </div>

                <div class="moon-out" style="float:right;color:white;">
                  
                </div>
            </div>

        </div>
        <div>
            @*@RenderSection("featured", required: false)*@
            <section class="content-wrapper main-content clear-fix" style="margin-top: 206px;">
                <div class="container text-center">
                    <section id="loginForm" style="width: 400px; margin: 0 auto;">
                        @*<h2>Use a local account to log in.</h2>*@
                        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="error">
                                @Html.ValidationSummary(true)
                                @ViewBag.Error
                            </div>
                            @*<fieldset>
                            <legend></legend>*@
                            <div class="panel panel-default">
                               <div class="panel-heading" style=" background-color: #006666;color:white;font-size: 17px;">Log In</div>
