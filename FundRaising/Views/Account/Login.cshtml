                                    @*<ul class="login-auth" style="list-style-type:none">
                                        <li>*@
                                           <label style="color:#006666;">@Html.LabelFor(m => m.UserName)</label> 
                                            @Html.TextBoxFor(m => m.UserName)
                                            <div class="error">
                                                @Html.ValidationMessageFor(m => m.UserName)
                                            </div>
                                        @*</li>
                                        <li>*@
                                            <label style="color: #006666;">
                                                @Html.LabelFor(m => m.Password)
                                            </label>
                                            &nbsp;@Html.PasswordFor(m => m.Password)
                                            <div class="error">
                                                @Html.ValidationMessageFor(m => m.Password)
                                            </div>
                                           @*</li>*@
                                        @*<li>
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                        </li>*@
                                    @*</ul>*@
                                    <input class="login_btn" type="submit" value="Log in" /><p class="register_log">
                                        @*@Html.ActionLink("Register", "Register") if you don't have an account.*@
                                    </p>
                                </div>
                            </div>


                            @*</fieldset>*@

                        }
                    </section>
                </div>
