<script>
    $(document).ready(function () {
        activeSubscription();
    })
    

    $(document).on('change', '#ProductType', function () {

        activeSubscription();
    });

    function activeSubscription()
    {
        var type = $('#ProductType').val();

        if (type == 2) {
            
            $('#subscriptionPrice').css('display', 'block');
            $('#subPart').css('display', 'block');
            $('#propart').css('display', 'none');
        }
        else {
            $('#subscriptionPrice').css('display', 'none');
            $('#subPart').css('display', 'none');
            $('#propart').css('display', 'block');
        }
    }

    
</script>

