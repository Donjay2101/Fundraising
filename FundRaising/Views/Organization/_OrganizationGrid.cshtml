@model IEnumerable<FundRaising.ViewModels.OrganizationViewModel>


@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
{
    columns.Add()
                .Encoded(false)
                .Sanitized(false)
                .SetWidth(30)
                .Css("hidden-xs") //hide on phones
                .RenderValueAs(o =>
                    @<div id="balloon" class="balloonClass">
                        <b>
                            @Html.ActionLink("Edit", "Edit", new { id = o.ID }, new { @class = "modal_link" })
                        </b>
                </div>);    

    columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(o =>
                @<div id="balloon" class="balloonClass">
                    <b>
                       <a href="#" onclick="Deleteconfirm('@o.ID','@o.Name')" >Delete</a>
                    </b>
                </div>);
    /* Adding "OrderID" column: */
    columns.Add(o => o.SchoolID)
           .Titled("School ID")
           .SetWidth(100);
    columns.Add(o => o.Name)
           .Titled("Name")
           .SetWidth(100);


    columns.Add(o => o.DistributorName)
           .Titled("Distributor")
           .SetWidth(100);
           
    columns.Add(o => o.City)
           .Titled("City")
           .SetWidth(100);

    columns.Add(o => o.State)
           .Titled("State")
           .SetWidth(100);

   
}
                                                        ).SetRowCssClasses(item => item.ShioToSchoolOnly ? "success" : string.Empty).WithPaging(15).Sortable().Filterable().WithMultipleFilters()


