@model IEnumerable<FundRaising.Models.Category>

@using GridMvc.Html
@*<p>
    @Html.ActionLink("Create New","Create","Category","","")
</p>*@

<script>
   
    

    function Deleteconfirm(id,name) {
        var d = confirm("Are you sure you want delete the Category : " + name);
        if (d) {
            Delete(id,'Category');
        }
    }
</script>
<div class="container" id="DemoDiv" style="width: 100%;height: 60px;background-color: transparent;">
    <h2 class="row text-center h2_margin">Categories</h2>
</div>
<div id="addNew" style="float:right;    margin: 15px 0;">
    <a href="#" class="linkbtn" onclick="AddCategory()" style="margin-right: 25px;">Add/Delete Category</a>
</div>
<div class="grid_cat">
    @Html.Grid(Model).Columns(columns =>
                    {
                      
                      
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(50)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        <a href="#" onclick="gotoPrevious('/Category/Edit/@c.ID')" class="modal_link">Edit</a>
                        @*@Html.ActionLink("Edit","Edit","Category", new { id = c.ID }, new { @class = "modal_link" })*@
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(50)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="#" onclick="Deleteconfirm('@c.ID','@c.CategoryName')">Delete</a>
                                            @*@Html.ActionLink("Delete","Delete","Category", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);
                        columns.Add(c => c.CategoryName).Titled("Category");
                        
                    }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()


</div>

